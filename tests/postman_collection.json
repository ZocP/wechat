            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/pay/prepare",
              "host": ["{{base_url}}"],
              "path": ["pay", "prepare"]
