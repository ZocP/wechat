              "raw": "{\n  \"transaction_id\": \"4200001234567890\",\n  \"order_id\": 1,\n  \"amount\": 5000,\n  \"status\": \"SUCCESS\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/pay/notify",
              "host": ["{{base_url}}"],
              "path": ["pay", "notify"]
            }
          }
        }
      ]
    },
    {
      "name": "消息板",
      "item": [
