          }
        },
        {
          "name": "通知订单（管理端）",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/orders/1/notify",
              "host": ["{{base_url}}"],
              "path": ["admin", "orders", "1", "notify"]
            }
          }
        }
      ]
    },
    {
      "name": "健康检查",
      "item": [
        {
          "name": "健康检查",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}

