{
  "info": {
    "name": "接机管理系统 API",
    "description": "微信小程序接机管理系统的API测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api/v1",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "认证",
      "item": [
        {
          "name": "微信登录",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"mock_wechat_code\",\n  \"phone_code\": \"mock_phone_code\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/wechat/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "wechat", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.code === 0) {",
                  "        pm.collectionVariables.set('jwt_token', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "获取当前用户信息",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "报名管理",
      "item": [
        {
          "name": "创建报名",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"张三\",\n  \"phone\": \"13800138000\",\n  \"wechat_id\": \"wx1234567890\",\n  \"flight_no\": \"CA1234\",\n  \"arrival_date\": \"2024-01-01\",\n  \"arrival_time\": \"14:30\",\n  \"departure_city\": \"北京\",\n  \"companions\": 2,\n  \"luggage_count\": 1,\n  \"pickup_method\": \"group\",\n  \"notes\": \"测试备注\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/registrations",
              "host": ["{{base_url}}"],
              "path": ["registrations"]
            }
          }
        },
        {
          "name": "获取我的报名列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/registrations/my",
              "host": ["{{base_url}}"],
              "path": ["registrations", "my"]
            }
          }
        },
        {
          "name": "获取报名详情",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/registrations/1",
              "host": ["{{base_url}}"],
              "path": ["registrations", "1"]
            }
          }
        },
        {
          "name": "更新报名",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"张三（更新）\",\n  \"notes\": \"更新后的备注\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/registrations/1",
              "host": ["{{base_url}}"],
              "path": ["registrations", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "订单管理",
      "item": [
        {
          "name": "创建订单",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
