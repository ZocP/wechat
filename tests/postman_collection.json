              "raw": "{\n  \"flight_no\": \"CA1234\",\n  \"terminal\": \"T3\",\n  \"pickup_batch\": \"批次1\",\n  \"arrival_airport\": \"北京首都国际机场\",\n  \"meeting_point\": \"T3航站楼出口\",\n  \"guide_text\": \"请按照指示牌前往集合点\",\n  \"map_url\": \"https://example.com/map.jpg\",\n  \"contact_name\": \"张司机\",\n  \"contact_phone\": \"13800138000\",\n  \"visible_from\": \"2024-01-01T00:00:00Z\",\n  \"visible_to\": \"2024-01-02T23:59:59Z\"\n}"
